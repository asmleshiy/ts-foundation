{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "isolatedModules": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
  },
  "include": [
    "packages/bp/src/**/*.ts",
    "packages/foundation/src/**/*.ts", "packages/foundation/src/.gitignore.ts", "packages/foundation/src/.gitignore.ts",
  ],
  "exclude": [
    "dist",
    "node_modules",
    "*gitignore",
  ]
}